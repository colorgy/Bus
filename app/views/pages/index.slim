javascript:
  $( function() {
    // init Isotope
    var $container = $('.isotope').imagesLoaded(function(){
      $container.isotope({
        itemSelector: '.element-item',
        columnWidth: '.grid-sizer',
      });
    });
  })

  $(window).scroll(function(){
    var window_height = $(window).height();
    var window_pos = $(window).scrollTop() + window_height;
    var table_pos = $('#table-anchor').offset().top;

    if( window_pos > table_pos ){
      $('.info.table').addClass('active');
      $('.box-image.table').addClass('active');
    }

  })
